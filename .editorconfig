# 配置文件的格式化方式
root = true

[*]
indent_size = 4
indent_style = tab
charset = utf-8
end_of_line = crlf
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{html, css, js, sass, ts, json, xml}]
indent_size = 2

[*.yml]
indent_size = 2
indent_style = space

[*.md]
indent_style = space
max_line_length = off
trim_trailing_whitespace = false